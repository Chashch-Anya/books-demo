<div class="col mb-4">
  <div class="card">
  <div class="card-body">
    <h3 class="card-title text-center">
      Доклад за: {{model.reportDate}}       
    </h3>
    <h6 class="card-subtitle mb-2 text-left">
      <p>Оценка книги: {{model.bookMark}}</p>
      <label>Презентация:</label> 
        <p>{{model.presentation}}</p>
      <label>Ссылка на видео:</label>
        <p>{{model.video}}</p>
      <label>Отзыв: </label>
        <p>{{model.review}}</p>
      <label>Докладчик: </label>
        <p>{{model.speaker.lastName}} {{model.speaker.firstName}}</p>
      <label>Книга: </label>
        <p>{{model.book.name}}</p>
    </h6>
  </div>
  <div class="card-footer">
      <div class="text-left">
        {{#link-to "meetings.index" class="btn btn-outline-primary"}}
          Назад
        {{/link-to}}
      </div>
      <div class="text-right">
        {{#link-to "reports.edit" model.id class="btn btn-outline-primary"}}
          Редактировать
        {{/link-to}}
        <button type="button" onclick={{ action "deleteReport" model }} class="btn btn-outline-danger" >
          Удалить 
        </button>
      </div>
  </div>
  </div>
</div>
{{outlet}}