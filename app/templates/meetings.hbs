<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">Встречи клуба</h2>
    <div class="form-row navbar-panel justify-content-between align-items-end">
      <div class="col-md-1">
        {{#link-to "meeting-create" class="btn btn-outline-primary my-2"}}
        Добавить встречу
        {{/link-to}}
      </div>
      <div class="col-md-3">
        <h5>Спикер</h5>
        {{#power-select
        options=model.speakers
        selected=selectedSpeaker
        onchange=(action "changeSpeaker")
        searchField="fullName"
        allowClear=true
        as |speaker|}}
        {{speaker.fullName}}
        {{/power-select}}
      </div>
      <div class="col-md-3">
        <h5>Книга</h5>
        {{#power-select 
        options=model.books  
        selected=selectedBook 
        searchField="name" 
        onchange=(action "changeBook") 
        as |book| }}
        {{book.name}}
        {{/power-select}}
      </div>
      <div class="col-md-3">
        <h5>Дата встречи</h5>
        <div class="form-group py-2 my-0">
          <div class="datepicker date input-group p-0 w-100">
            {{bootstrap-datepicker class="form-control" id="meetingDateFilter" value=selectedDate format="dd/mm/yy" changeDate=(action "changeDate")}}
            <div class="input-group-append">
              <span class="input-group-text px-4">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-clock" fill="currentColor"
                  xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm8-7A8 8 0 1 1 0 8a8 8 0 0 1 16 0z" />
                  <path fill-rule="evenodd"
                    d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z" />
                </svg>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{#each model as |meeting|}}
    {{meeting-item meeting=meeting}}
    {{/each}}
  </div>
</div>