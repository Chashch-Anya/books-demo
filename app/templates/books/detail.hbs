<div class="slide-out-bg"></div>

<div class="slide-out">
    <div class="slide-out-catd">
        {{#link-to "books.index"}}
        <span class="sr-only">Back</span>
        {{/link-to}}

        <div class="slide-out-heading">
            <div class="title">
                <h3>{{model.name}}</h3>

                <div class="actions">
                    {{#link-to "books.edit" model.id class="btn-pop"}}
                    edit
                    {{/link-to}}
                    <button class="btn-recessed" onclick={{action "deleteBook" model}}>delete</button>
                </div>
            </div>
        </div>
    </div>
</div>