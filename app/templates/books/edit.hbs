<div class="slide-out-bg"></div>
<div class="slide-out">
    <div class="slide-out-card">
        {{#link-to "books" class="btn-back"}}
        <span class="sr-only">Back</span>
        {{/link-to}}
        
        <div class="slide-out-heading">
            <div class="title">
                <h3>Edit Book: {{model.name}}</h3>
            </div>
        </div>

        <div class="slide-out-content">
 <form onsubmit={{action "saveBook"}}>

                <div class="form-group row">
                    <label for="inputTitle" class="col-sm-2 col-form-label">Book Name: </label>
                    <div class="col-sm-10">
                        {{input type="text" class="form-control form-control-lg" id="inputTitle" placeholder="Book name" value=books.name}}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputTitle" class="col-sm-2 col-form-label">Book author: </label>
                    <div class="col-sm-10">
                        {{input type="text" class="form-control form-control-lg" id="inputTitle" placeholder="Book author" value=books.author}}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="customFile" class="col-sm-2 col-form-label text-right">Обложка</label>
                    {{input-file class="input-group input-group-lg col-sm-10" uploadData=uploadData uploadDataChanged=(action "changeUploadData")}}
                </div>

                <div class="form-group row">
                    <label for="inputTags" class="col-sm-2 col-form-label text-right">Теги</label>
                    <div class="col-sm-10">
                        {{input-tags tags=tags onChange=(action "changeTags")}}
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-outline-primary btn-lg">save</button>
                    </div>
                </div>
            </form>
         </div>
    </div>
</div>