<form onsubmit={{action "sumbitForm"}}>
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Название книги: </label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg"  placeholder="Название книги" value=name}}
            </div>
        </div>

        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Автор: </label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg"  placeholder="Автор" value=author}}
            </div>
        </div>

        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Количество страниц: </label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg"  placeholder="Количество страниц" value=pageCount}}
            </div>
        </div>

        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Ссылка на описание книги: </label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg"  placeholder="Ссылка на описание книги" value=description}}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary btn-lg">Сохранить</button>
            </div>
        </div>
    {{!-- </div> --}}
</form>