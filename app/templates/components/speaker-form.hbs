<form onsubmit={{action "sumbitForm"}}>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Имя спикера: </label>
            <div class="col-sm-10">
                {{input type="text" id="inputName" class="form-control form-control-lg"  placeholder="Имя спикера" value=firstName}}
            </div>
        </div>

        <div class="form-group row">
            <label for="inputLastName" class="col-sm-2 col-form-label">Фамилия спикера: </label>
            <div class="col-sm-10">
                {{input type="text" id="inputLastName" class="form-control form-control-lg"  placeholder="Фамилия спикера" value=lastName}}
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPatronymic" class="col-sm-2 col-form-label">Отчество спикера: </label>
            <div class="col-sm-10">
                {{input type="text" id="inputPatronymic" class="form-control form-control-lg"  placeholder="Отчество спикера" value=patronymic}}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary btn-lg">Сохранить</button>
                {{#link-to "speakers" class="btn btn-outline-secondary btn-lg"}}Отмена{{/link-to}}
            </div>
        </div>
    {{!-- </div> --}}
</form>