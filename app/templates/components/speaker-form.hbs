<form onsubmit={{action "sumbitForm"}}>
    <div class="skide-out-content">

        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Имя спикера: </label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg"  placeholder="Имя спикера" value=speaker.firstName}}
            </div>
        </div>

        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Фамилия спикера: </label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg"  placeholder="Фамилия спикера" value=speaker.lastName}}
            </div>
        </div>

        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Отчество спикера: </label>
            <div class="col-sm-10">
                {{input type="text" class="form-control form-control-lg"  placeholder="Отчество спикера" value=speaker.patronymic}}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary btn-lg">Сохранить</button>
            </div>
        </div>
    </div>
</form>